# install.packages("devtools")
#devtools::install_github("business-science/portfoliodown")

library(portfoliodown)
# new_portfolio_site() function, which will install a directory of files that are used to create the Data Science Portfolio Template.
new_portfolio_site(
  dir = ".",
  force = NA,
  install_hugo = TRUE,
  sample = FALSE,
  format = "yaml",
  theme = c("raditian", "kross"),
  theme_example = TRUE,
  netlify = TRUE,
)
#launch server
serve_site()

stop_server()
